{
  "name": "fullstack-application",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "lint": "npx eslint && cd frontend/ && npm run lint",
    "build:frontend": "cd frontend && npm run build",
    "dev:backend": "node --watch server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "jest",
    "docker-up": "docker compose up",
    "docker-down": "docker compose down",
    "docker-rebuild": "docker compose up --build"
  },
  "keywords": [
    "fullstack",
    "react",
    "nodejs",
    "express",
    "sqlite3",
    "docker",
    "github-actions",
    "render",
    "ci-cd",
    "frontend",
    "backend",
    "web-development",
    "software-development"
  ],
  "author": "Firstname Lastname",
  "license": "SEE LICENSE IN LICENSE.md",
  "devDependencies": {
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "description": "A full-stack application demonstrating the software development lifecycle with React, Node.js, Express, SQLite3, Docker, and CI/CD using GitHub Actions, deployed on Render.",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-validator": "^7.2.0"
  }
