{
  "name": "fullstack-application",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install-all": "npm install",
    "lint-backend": "cd backend && npm run lint",
    "lint-frontend": "cd backend && npm run lint",
    "lint": "concurrently \"npm run lint-frontend\" \"npm run lint-backend\"",
    "test": "cd backend && npm run test",
    "start": "concurrently \"npm run start-frontend\" \"npm run start-backend\"",
    "start-frontend": "npm run dev --workspace=frontend",
    "start-backend": "npm start --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
